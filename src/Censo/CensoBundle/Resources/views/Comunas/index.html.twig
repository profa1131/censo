{% extends '::base.html.twig' %}

{% block body -%}
    <h1 class="page-header">Listado de Comunas</h1>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                        Comunas
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">

                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Direccion</th>
                                    <th>Correo</th>
                                    <th>Telefono</th>                
                                    <th>Rif</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for entity in entities %}
                                    <tr>
                                        <td><a href="{{ path('comunas_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                        <td>{{ entity.nombre }}</td>
                                        <td>{{ entity.direccion }}</td>
                                        <td>{{ entity.correo }}</td>
                                        <td>{{ entity.telefono }}</td>
                                        <td>{{ entity.rif }}</td>
                                        <td class="print">
                                           
        <a href="{{ path('comunas_show', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-zoom-in col-md-4 col-md-4"></i> </a>
        <a href="{{ path('comunas_edit', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-pencil col-md-4 col-md-offset-4"></i></a>
     </td>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
              <a class="col-md-12 btn btn-success print" href="{{ path('comunas_new') }}">Agregar nueva Comuna </a>
                </div>
            
            </div>
       
        </div>
    </div>

    <ul>
        
    </ul>
{% endblock %}
