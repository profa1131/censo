{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Usuarios list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Salt</th>
                <th>Password</th>
                <th>Email</th>
                <th>Isactive</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Cedula</th>
                <th>Tipoempleado</th>
                <th>Departamento</th>
                <th>Cargo</th>
                <th>Sede</th>
                <th>Fechaingreso</th>
                <th>Fechaactivacion</th>
                <th>Fecharegistro</th>
                <th>Telefonooficina</th>
                <th>Telefonomovil</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('usuarios_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.salt }}</td>
                <td>{{ entity.password }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.isActive }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.apellido }}</td>
                <td>{{ entity.cedula }}</td>
                <td>{{ entity.tipoEmpleado }}</td>
                <td>{{ entity.departamento }}</td>
                <td>{{ entity.cargo }}</td>
                <td>{{ entity.sede }}</td>
                <td>{% if entity.fechaIngreso %}{{ entity.fechaIngreso|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechaActivacion %}{{ entity.fechaActivacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechaRegistro %}{{ entity.fechaRegistro|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.telefonoOficina }}</td>
                <td>{{ entity.telefonoMovil }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('usuarios_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('usuarios_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('usuarios_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
